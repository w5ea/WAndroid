<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/cn.way.wandroid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f55"
    android:orientation="vertical" >

    <cn.way.wandroid.views.WSteper
        android:id="@+id/wSteper1"
        android:layout_width="match_parent"
        android:layout_height="50dp" >
    </cn.way.wandroid.views.WSteper>

    <cn.way.wandroid.views.PageIndicator
        android:id="@+id/pageIndicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fc0"
        android:orientation="horizontal" />
    <cn.way.wandroid.views.CountdownView 
        android:id="@+id/countdownView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#FF0"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>